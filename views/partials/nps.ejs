            <img src="./stylesheets/on.svg" class="star" id="star2" onclick="fillstar(this);setStars(3)" />
            <img src="./stylesheets/on.svg" class="star" id="star3" onclick="fillstar(this);setStars(4)" />
            <img src="./stylesheets/on.svg" class="star" id="star4" onclick="fillstar(this);setStars(5)" />
        </div> 

        <div class="clearfix"></div>    
